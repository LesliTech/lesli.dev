lesli = data.send(I18n.locale.to_sym).lesli

links = [{
    link: "/docs/about",
    text: "About",
    icon: "ri-heart-line"
},{
    link: "/docs/about",
    text: "Getting started",
    icon: "ri-send-plane-line"
},{
    link: "/docs/about",
    text: "Source code",
    icon: "ri-git-pull-request-line"
},{
