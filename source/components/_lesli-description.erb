

<% description = data.send(I18n.locale.to_sym).component_description %>

<section class="lesli-component-description">
    <div class="container">
        <div class="component-header">
            <p><%= description[:description] %></p>
        </div>
    </div>
    <div class="columns">
        <% description[:components].each do |component| %>
            <div class="column">
                <div>
                    <i class="<%= component[:icon] %>"></i>
                    <h3><%= component[:name] %></h3>
                    <p><%= component[:text] %></p>
                    <ul>
                        <% component[:items].each do |item| %>
                            <li><%= item %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        <% end %>
    </div>
</section>
