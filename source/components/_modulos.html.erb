<% collections = data.send(I18n.locale.to_sym).component_collections %>

<section class="lesli-component-modulos hero is-fullheight">
    <div class="hero-body">
        <div class="container">
            <div class="component-header">
                <h2><%= collections[:title] %></h2>
                <p><%= collections[:text] %></p>
            </div>
            <div class="columns">
                <% collections[:collection].each do |collection| %>
                    <% collection[:modulos].each do |modulo| %>   
                        <div class="column">    
                            <div class="module">
                                <% svg = "cloud-#{modulo[:name].downcase}" %>
                                <%= lesli_svg(svg) %>
                                <h3><%= modulo[:name] %></h3>
                                <p><%= modulo[:text] %></p>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</section>
