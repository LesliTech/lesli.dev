
<%
section = current_page.path.split("/").first
project = current_page.path.split("/").second
navigation = []

navigation = get_navigation_for_engine(project) if section == "engines"
navigation = get_navigation_for_vue(project) if section == "vue"
%>

<aside class="lesli-partial-aside">
    <figure class="lesli-partial-aside-logo">
        <a href="/">
            <%= image_tag("brand/lesli.svg", alt: "Lesli logo") %>
        </a>
    </figure>
    <nav>
        <% navigation.each do |docs| %>
            <ul>
                <li>
                    <h3>
                        <% if docs[:url].blank? %>
                            <%= docs[:name] %>
                        <% else %>
                            <a href="<%= docs[:url] %>"><%= docs[:name] %></a>
                        <% end %>
                    </h3>
                </li>
                <% docs[:items].each do |item| %>
                    <li><a href="<%= item[:url] %>"><%= item[:name] %></a></li>
                <% end %>
            </ul>
        <% end %>
    </nav>
</aside>
