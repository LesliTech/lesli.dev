<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
        <meta content="#0d52bf" name="theme-color">
        <title><%= current_page.data.title || "Lesli" %> Â· Ruby on Rails SaaS Development Framework</title>
        <%= stylesheet_link_tag(lesli_stylesheet_for(current_page)) %>
        <link rel="icon" href="/favicon.png">
    </head>
    <body>
        <header>
            <%= partial("partials/lesli-navigation", :locals => { :logo => true }) %>
            <div class="container">
                <h1><span class="lesli-title-colored"><%= current_page.data.title %></span></h1>
                <h3><%= current_page.data.description %></h3>
            </div>
        </header>
        <section class="container">
            <%= yield %>
        </section>
        <%= javascript_include_tag "site" %>
        <%= partial("partials/lesli-links") %>
        <%= partial("partials/lesli-footer") %>
        <%= partial("partials/lesli-icons") %>
        <%= partial("partials/lesli-analytics") %>
    </body>
</html>
